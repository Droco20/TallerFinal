<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title> Grand Bingo </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css">
</head>
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Grand</a>
    <img class="mt-1 ml-auto"
      src="https://st2.depositphotos.com/1764439/5530/i/950/depositphotos_55309033-stock-photo-bingo-sign.jpg"
      alt="" width="400" height="100" />
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <%if (user){ %>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Exit</a>
          </li>

          <% } else{ %>

            <li class="nav-item">
              <a class="nav-link" href="/signin">Entrar</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signup">Registrarse</a>
            </li>
            <% } %>
      </ul>
    </div>
  </div>
</nav>

<body>

  <!-- NAVIGATION -->
  <div class="container">

    <%if (signinMessage.length> 0) {%>

      <div class="alert alert-danger">
        <%= signinMessage %>
      </div>

      <% } %>
        <%if (signupMessage.length> 0) {%>

          <div class="alert alert-danger">
            <%= signupMessage %>
          </div>

          <% } %>

            <%- body %>



  </div>




</body>

</html>